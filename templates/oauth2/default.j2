OAUTH2_PROXY_HTTP_ADDRESS={{ loki_oauth2_listen_address }}
OAUTH2_PROXY_REVERSE_PROXY=true
OAUTH2_PROXY_UPSTREAMS={{ loki_oauth2_upstream }}
OAUTH2_PROXY_FOOTER=-

OAUTH2_PROXY_REQUEST_LOGGING={{ loki_oauth2_request_logging | lower }}
OAUTH2_PROXY_AUTH_LOGGING={{ loki_oauth2_access_logging | lower }}

OAUTH2_PROXY_COOKIE_SECRET={{ loki_oauth2_cookie_secret }}
OAUTH2_PROXY_COOKIE_NAME=loki
OAUTH2_PROXY_COOKIE_SECURE={{ (true if loki_domain.startswith('https://') else false) | lower }}
OAUTH2_PROXY_COOKIE_EXPIRE=24h0m0s

OAUTH2_PROXY_CLIENT_ID={{ loki_oauth2_client_id }}
OAUTH2_PROXY_CLIENT_SECRET={{ loki_oauth2_client_secret }}
OAUTH2_PROXY_EMAIL_DOMAINS=*
{% if loki_oauth2_provider == 'keycloak' %}

OAUTH2_PROXY_SCOPE=openid profile email
OAUTH2_PROXY_PROVIDER=keycloak-oidc
OAUTH2_PROXY_PROVIDER_DISPLAY_NAME=Keycloak
OAUTH2_PROXY_REDIRECT_URL={{ loki_domain }}/oauth2/callback
OAUTH2_PROXY_OIDC_ISSUER_URL={{ loki_oauth2_keycloak_url }}
{% endif %}
{% if loki_oauth2_allowed_groups | default(false) %}

OAUTH2_PROXY_ALLOWED_GROUPS={{ loki_oauth2_allowed_groups | join(',') }}
{% endif %}
{% if loki_oauth2_static_users | default(false) %}

OAUTH2_PROXY_DISPLAY_HTPASSWD_FORM=false
OAUTH2_PROXY_HTPASSWD_FILE=/etc/loki/htpasswd
OAUTH2_PROXY_HTPASSWD_USER_GROUPS={{ loki_oauth2_static_groups | join(',') }}
{% endif %}
